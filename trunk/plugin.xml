   <extension
         point="org.eclipse.jdt.ui.javaEditorTextHovers">
      <hover
            activate="false"
            class="org.eclipse.remail.editor.MailHover"
            description="Cool Hover"
            id="REmail.hover1"
            label="Hooover">
      </hover>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="false"
            class="org.eclipse.remail.properties.RemailProperties"
            icon="icons/remail.png"
            id="org.eclipse.remail.properties.RemailProperties"
            name="REmail Properties">
      </page>
   </extension>
</plugin>
